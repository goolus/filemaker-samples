<h1><%= @event.title %></h1>
<p><%= t ".pub_date" %>:&nbsp;<%= @event.pub_date.try(:strftime,"%Y年%m月%d日") %></p>
<p><%= t ".organizer" %>:&nbsp;<%= @event.organizer %></p>
<p><%= @event.body %></p>
<% if @event.image.present? %>
<img src="<%= @event.image %>"></img>
<% end %>
<p><%= link_to t(".to_list"), events_path %></p>
